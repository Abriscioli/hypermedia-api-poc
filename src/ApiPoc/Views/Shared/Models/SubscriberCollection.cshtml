@model ApiPoc.Representations.SubscriberCollection
@inject Microsoft.Framework.OptionsModel.IOptions<ApiPoc.AppSettings> settings
<div class="subscribers">
    <h2>@Html.Link(Model.GetLinkBag().GetFirstByRel(Rel.Self), customText: "Subscribers")</h2>
    <small><a target="_blank" href="@(settings.Options.DocumentationBaseUrl + "models/SubscriberDetailedCollection.md")">See documentation about <code>SubscriberDetailedCollection</code> model</a></small>
    <ul class="items">
        @foreach(var item in Model.Items)
        {
            <li class="subscriber-item">
                <span class="id">@item.Id</span> - <span class="last-name">@item.LastName</span>, <span class="first-name">@item.FirstName</span> @Html.Link(item.GetLinkBag().GetFirstByRel(Rel.Alternate))
            </li>
        }
    </ul>
    @Html.Partial("Forms/UnusedLinksAndForms", Model)

</div>
