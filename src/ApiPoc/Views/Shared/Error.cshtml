@using ApiPoc.Representations
@using ApiPoc.Helpers
@model ApiPoc.Representations.ErrorRepresentation
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Error @Model.Code</title>
</head>
<body>
    <div id="error">
        <h1>Error <span class="error-code">@Model.Code</span></h1>
        <p class="error-message">@Model.Message</p>
        <footer>
            @Html.Links(Model.GetLinkBag().GetUnusedLinks())
        </footer>
    </div>
</body>
</html>
